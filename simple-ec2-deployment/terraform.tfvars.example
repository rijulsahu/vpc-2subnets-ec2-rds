# Example Terraform variables file
# Copy this file to terraform.tfvars and modify values as needed

# AWS Region - choose a region where you want to deploy
aws_region = "ap-south-1"

# Project name - used for resource naming and tagging
project_name = "simple-ec2"

# EC2 Instance type - must be free tier eligible
# Options: t2.micro, t3.micro
instance_type = "t2.micro"

# Key pair configuration
# Option 1: Create a new key pair
create_key_pair = true
key_pair_name = "my-ec2-keypair"  # Name for the new key pair
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-public-key-here"

# Option 2: Use existing key pair (uncomment and modify)
# create_key_pair = false
# key_pair_name = "existing-keypair-name"

# SSH access - CIDR block allowed to SSH to the instance
# Use 0.0.0.0/0 for access from anywhere (not recommended for production)
# Use your specific IP/CIDR for better security (e.g., "203.0.113.0/24")
allowed_ssh_cidr = "0.0.0.0/0"

# Environment tag
environment = "development"

# Root volume configuration
root_volume_size = 10  # GB (8-30 GB for free tier)
root_volume_type = "gp3"  # gp2 or gp3